<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <edu.up.cs301.qwirklegame.QwirkleView
        android:id="@+id/boardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#BAB7B7"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Your Score:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/player_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="0"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/player_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/tile1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="0"
                android:contentDescription="@string/tile_1"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_blank" />

            <ImageButton
                android:id="@+id/tile2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="0"
                android:contentDescription="@string/tile_2"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_blank" />

            <ImageButton
                android:id="@+id/tile3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="0"
                android:contentDescription="@string/tile_3"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_blank" />

            <ImageButton
                android:id="@+id/tile4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="0"
                android:contentDescription="@string/tile_4"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_blank" />

            <ImageButton
                android:id="@+id/tile5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="0"
                android:contentDescription="@string/tile_5"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_blank" />

            <ImageButton
                android:id="@+id/tile6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="0"
                android:contentDescription="@string/tile_6"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_blank" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tile_bag"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Tiles left:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tiles_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="0"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/turn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Player turn:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/player_turn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="0"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/discard_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=" Discard Mode " />

                <Button
                    android:id="@+id/confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="      Confirm      " />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingRight="10dp">

                <Button
                    android:id="@+id/end_turn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="End Turn" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>

